<p id="notice"><%= notice %></p>

<div class="container">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Subtitle:</strong>
  <%= @post.subtitle %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Theme:</strong>
  <%= @post.theme_id %>
</p>
<% if user_signed_in? && current_user.id == @post.id%>
  <%= link_to 'Mofifier', edit_post_path(@post) %> |
  <%= link_to 'Retour', posts_path %>
<% end %>
<h3>Article de cet auteur </h3>
<ul>
  <% @user_posts.each do |post| %>
    <li><%= link_to "#{post.title}", post_path(post.id) %></li>
  <% end %>
</ul>
</div>